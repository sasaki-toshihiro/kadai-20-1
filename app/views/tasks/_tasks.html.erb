<% if tasks.any? %>
  <ul class="list-unstyled">
    <% tasks.each do |task| %>
      <li class="mb-3 d-flex">
        <img class="rounded me-2" src="<%= gravatar_url(task, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= task.name %>
          </div>
          <div>
            <% if current_user == task.user %>
              <%= link_to "Delete", tasklist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user), class: "text-decoration-none" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>